<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout tools:context="${relativePackage}.${activityClass}" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="TextView"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:id="@+id/textViewT"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Large Text"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewL"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textViewT"/>
    <ImageSwitcher
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageSwitcher1"
        android:layout_below="@+id/textViewL"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="53dp"
        android:layout_alignLeft="@+id/textViewT">
    </ImageSwitcher>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Take Photo"
        android:layout_centerInParent="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_TS"
        android:onClick="buttonPush"
        android:layout_alignRight="@+id/imageSwitcher1"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Please take 10 photos of this person's face."
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:id="@+id/textViewTSInfo1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/textViewL"/>
</RelativeLayout>
